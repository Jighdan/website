---
import { AstroSeo } from '@astrolib/seo';
import Layout from '~/layouts/Default.astro';
---

<Layout>
<AstroSeo
    title='Contact'
    description='Contact Reinny'
        slot='seo'
/>

<form action="/api/send-email" method="post" aria-labelledby="form-title" class="flex flex-col gap-8">
  <div>
    <label for="email" class="block mb-1 text-black/80 lowercase">Your Email</label>
    <input type="email" id="email" name="email" required aria-required="true"
           class="w-full bg-transparent border-b border-black/20 py-1 focus:outdivne-none focus:border-black transition-colors">
  </div>

  <div>
    <label for="subject" class="block mb-1 text-black/80 lowercase">Subject</label>
    <input type="text" id="subject" name="subject" required aria-required="true"
           class="w-full bg-transparent border-b border-black/20 py-1 focus:outdivne-none focus:border-black transition-colors">
  </div>

  <div>
    <label for="message" class="block mb-1 text-black/80 lowercase">Message</label>
    <textarea id="message" name="message" rows="4" required aria-required="true"
              class="w-full bg-transparent border-b border-black/20 py-1 focus:outdivne-none focus:border-black transition-colors"></textarea>
  </div>

  <div class="mt-8">
    <button type="submit"
            class="w-full bg-black text-white py-2 px-4">
      Message
    </button>
  </div>
</form>
</Layout>
