---
import { AstroSeo } from '@astrolib/seo';

interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
const imageUrl = [Astro.site?.href, "landmark.png"].join("/");
---

<AstroSeo
	title={title}
	description={description}
	canonical={Astro.url.toString()}
	openGraph={{
		title,
		description,
		url: Astro.url.toString(),
		images: [
			{
				url: imageUrl,
				alt: "Reinny Almonte Ramos",
			}
		]
	}}
/>